        <div class="col-md-12 col-lg-4 align-self-center">
            <form asp-method="post"  asp-action="Register">

                <div class="registration-form">
                    <div>
                    <label asp-for="FirstName">First name</label>
                    <input asp-for="FirstName" type="text" class="form-control text-control" id="fname">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <label asp-for="SecondName" class="mgt-21">Last name</label>
                    <input asp-for="SecondName" type="text" class="form-control text-control" id="lname">

                    <div>
                    <label asp-for="PhoneNumber" class="mgt-21">Phone Number</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control text-control" id="num" maxlength="10">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div>
                    <label asp-for="Email" class="mgt-21">Email Address</label>
                    <input asp-for="Email" type="tel" class="form-control text-control" id="email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div>
                    <label asp-for="Password" class="mgt-21">Password</label>
                    <input  asp-for="Password" type="password" class="form-control text-control" id="pass">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div>
                    <label class="mgt-21">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control text-control" id="conpass">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-outline-orange register-btn btn-block w-100">
                        Register
                    </button>
                    <div class="login-link text-center mgt-21">
                       <a asp-controller="Home" asp-action="LostPassword"> Lost your password?</a></div>
                    <div class="have-acc">
                        Already registered?
                        <a asp-controller="Home" asp-action="Index">Login now</a>
                    </div>
                </div>

            </form>

            <div class="privacy-policy"><a href="" id="privacy-policy">Privacy Policy</a></div>
