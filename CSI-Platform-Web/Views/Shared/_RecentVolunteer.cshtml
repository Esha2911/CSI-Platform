<div class="border pt-3">
    <div class="border-bottom ms-3 me-3">
        <span class="border-bottom border-secondary border-2" style="font-size:22px">Recent Volunteers</span>
    </div>
    <div class="row text-center mb-4" id="volunteers">
        
    </div>
    <div class="row border text-center">
        <button class="col-2 border pt-2 pb-2" id="prev">
            <img src="~/images/left.png" />
        </button>
        <div class="col-8 fs-fourteen pt-2 pb-2" id="page_info"> 1 - 9 of 25 Recent Volunteers</div>
        <button class="col-2 border pt-2 pb-2" id="next">
            <img src="~/images/right-arrow1.png" />
        </button>
    </div>
</div>

<script>
    let volunteers = document.getElementById("volunteers");
    let next = document.getElementById("next");
    let prev = document.getElementById("prev");
    let page_info = document.getElementById("page_info");

    let page_no = 0;
    let item_per_page = 9;

    var items = [{
        src: "\images\volunteer1.png",
        name: "Andrew Johnson",
    },{
        src: "~/images/volunteer2.png",
        name: "Charles Vigue",
    },{
        src: "~/images/volunteer3.png",
        name: "Charles Vigue",
    },{
        src: "~/images/volunteer4.png",
        name: "Estella Fowles",
    },{
        src: "~/images/volunteer5.png",
        name: "Rose Lewis",
    },{
        src: "~/images/volunteer6.png",
        name: "Raymond Pabon",
    },{
        src: "~/images/volunteer7.png",
        name: "Travis Steen",
    },{
        src: "~/images/volunteer8.png",
        name: "Sarah Santillan",
    },{
        src: "~/images/volunteer9.png",
        name: "Linda Richards",
    },{
        src: "~/images/volunteer8.png",
        name: "Sarah Santillan",
    },{
        src: "~/images/volunteer7.png",
        name: "Travis Steen",
    },{
        src: "~/images/volunteer6.png",
        name: "Raymond Pabon",
    },{
        src: "~/images/volunteer5.png",
        name: "Rose Lewis",
    },{
        src: "~/images/volunteer4.png",
        name: "Estella Fowles",
    },{
        src: "~/images/volunteer3.png",
        name: "Charles Vigue",
    },{
        src: "~/images/volunteer2.png",
        name: "Charles Vigue",
    },];

    let no_of_pages = Math.ceil(items.length / item_per_page);
    //console.log(no_of_pages);

    pagination(page_no);

    function pagination(page_index)
    {
        let count=0;
        volunteers.innerHTML = ``;
        for(let i = page_index*item_per_page; i<(page_index*item_per_page)+item_per_page; i++)
        {
            if(!items[i]) {break;}
            
            count++;
            const item = document.createElement('div');
            item.classList.add('col-4');
            item.classList.add('mt-4');
            item.innerHTML = `
                <img src=${items[i].src} class="rounded-circle volunteer-img"/>
                <div class="fs-thirteen">${items[i].name}</div>
            `;
            volunteers.append(item)
        }
        
        page_info.innerHTML = `${page_index*item_per_page+1} - ${(page_index*item_per_page)+count} of ${items.length} Recent Volunteers`;
    }

    next.onclick = function (){
        if(page_no == no_of_pages-1){
            page_no = 0;
        }
        else{
            page_no++;
        }
        pagination(page_no);
    }
    prev.onclick = function (){
        if(page_no == 0){
            page_no = no_of_pages-1;
        }
        else{
            page_no--;
        }
        pagination(page_no);
    }
</script>